 @font-face {
   font-family: 'aa QWERTZ-Tasten';
   src: url('/assets/aaQwertz-Tasten.ttf') format('truetype');
   font-weight: normal;
   font-style: normal;
 }

body {
  font-family: sans-serif;
  margin: 0;
  padding: 0;
  /*background: #C4C4C4;*/
  background-image: url(<%= asset_path 'blueprint.jpg' %>);
}

#toolbar {
  width: 20%;
  overflow: hidden;
  text-align: center;
  font-weight: bold;
  position: absolute;
  top: 10px;
  right: 10px;
  background: rgba(0,0,0,0.2);
  padding: 5px 5px 0 5px;
  border-radius: 10px;
}

#logo {
  position: absolute;
  top: 10px;
  width: 20%;
}

#author {
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

#social {
  position: absolute;
  right: 5px;
  bottom: 0;
}

.social-button {
  width: 30px;
  height: 30px;
  margin-right: 5px;
}

#threejs {
  background: rgba(255,255,255,0.15);
}

#black {
  cursor: url(<%= asset_path 'black.cur' %>), auto;
}

#blue3 {
  cursor: url(<%= asset_path 'blue3.cur' %>), auto;
}

#blue4 {
  cursor: url(<%= asset_path 'blue4.cur' %>), auto;
}

#gray {
  cursor: url(<%= asset_path 'gray.cur' %>), auto;
}

#green {
  cursor: url(<%= asset_path 'green.cur' %>), auto;
}

#purple {
  cursor: url(<%= asset_path 'purple.cur' %>), auto;
}

#purple {
  cursor: url(<%= asset_path 'purple.cur' %>), auto;
}

#red {
  cursor: url(<%= asset_path 'red.cur' %>), auto;
}

#white {
  cursor: url(<%= asset_path 'white.cur' %>), auto;
}

#yellow4 {
  cursor: url(<%= asset_path 'yellow4.cur' %>), auto;
}

#yellow6 {
  cursor: url(<%= asset_path 'yellow6.cur' %>), auto;
}

#single-bond {
  cursor: url(<%= asset_path 'singlebond.cur' %>), auto;
}

#upgrade-bond {
  cursor: url(<%= asset_path 'upgradebond.cur' %>), auto;
}

#rotate {
  cursor: url(<%= asset_path 'rotate.cur' %>), auto;
}

#rotateL {
  cursor: url(<%= asset_path 'rotateL.cur' %>), auto;
}

canvas {
  display: block;
}

.piece {
  width: 25px;
}

#undo {
  background: blue;
}

#clear {
  background: red;
}

#load {
  background: green;
}

#instructions {
  background: orange;
}

#instructions-modal {
  width: 90%;
  left: 4%;
}

#load-save-modal {
  text-align: center;
  left: 20%;
  right: 40%;
}

.button {
  border-radius: 10px;
  padding: 1% 0;
  cursor: pointer;
  margin-bottom: 8px;
}

#save-button {
  background: green;
  display: inline-block;
  padding: 5px;
}

.modal {
  padding: 10px;
  display: none;
  background: lightgray;
  border: solid 2px gray;
  border-radius: 10px;
  position: absolute;
  top: 5%;
  cursor: default;
}

.close {
  font-family: sans-serif;
  float: right;
  color: red;
  cursor: pointer;
}

ul, li {
  list-style: none;
  margin: 0;
  padding: 0;
}

li:hover {
  color: orange;
  cursor: pointer;
  background: rgba(0,0,0,0.5);
}

h1, h2, h3, h4 {
  padding-top: 5px;
  padding-bottom: 5px;
  margin: 0;
}

#piece-container {
  border-radius: 5px;
  border: solid 2px black;
  background: rgba(0,0,0,0.3);
  margin-bottom: 5px;
}
